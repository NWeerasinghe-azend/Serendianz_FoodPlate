<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/idRLBSheet1"
    android:layout_height="wrap_content"
    android:background="@color/black_shade_1"
    android:padding="8dp">


    <TextView
        android:id="@+id/idTVFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Food Name"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/idIVFood"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVFoodName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/idTVFoodDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFoodName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/idIVFood"
        android:layout_toRightOf="@id/idIVFood"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="italic" />



    <TextView
        android:id="@+id/idTVPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFoodDesc"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVFood"
        android:padding="3dp"
        android:textSize="19dp"
        android:text="price "
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPrice"
        android:orientation="horizontal"

        android:weightSum="2">

        <Button
            android:id="@+id/idBtnEditFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="37dp"
            android:layout_marginTop="26dp"
            android:layout_weight="1"
            android:text="Edit Food"
            android:textAllCaps="false"
            android:textSize="20dp" />


        <Button
            android:id="@+id/idBtnVIewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>